    <!-- base set of styles that apply to all versions -->
    <style name="BaseAppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:windowBackground">@color/background</item>

    </style>

    <!-- declare the theme name that's actually applied in the manifest file -->
    <style name="AppTheme" parent="BaseAppTheme" />

    <!-- CardView style -->
    <style name="AppTheme.CardView" parent="CardView">
        <item name="cardBackgroundColor">@color/cardview_background</item>
    </style>


    <!-- Text -->
    <!-- The base style all other text styles will extend. Don't use this style directly. -->
    <style name="Text" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/on_background_high_emphasis</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:fontFamily">@font/roboto_mono</item>

        <item name="android:textColorHint">@color/on_background_disabled</item>
    </style>

    <!-- Text styles for rendered markdown -->
    <style name="Text.Markdown">
        <item name="android:fontFamily">sans-serif</item>
    </style>
    <style name="Text.Markdown.Title">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">@dimen/text_size_large_markdown</item>
    </style>
    <style name="Text.Markdown.Body">
        <item name="android:textSize">@dimen/text_size_normal_markdown</item>
    </style>
    <style name="Text.Markdown.Metadata">
        <item name="android:textSize">@dimen/text_size_small_markdown</item>
    </style>

    <!-- Text styles for general content -->
    <style name="Text.Body" />
    <style name="Text.Title">
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:fontFamily">@font/roboto_mono_bold</item>
    </style>
    <style name="Text.Metadata">
        <item name="android:textColor">@color/on_background_disabled</item>
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>

    <!-- Text styles for CardViews -->
    <style name="Text.Body.Cardview">
        <item name="android:textSize">@dimen/text_size_normal_cardview</item>
    </style>
    <style name="Text.Title.Cardview">
        <item name="android:textSize">@dimen/text_size_large_cardview</item>
    </style>
    <style name="Text.Metadata.Cardview">
        <item name="android:textSize">@dimen/text_size_small_cardview</item>
    </style>

</resources>
