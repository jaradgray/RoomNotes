<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".NoteActivity">

    <LinearLayout
        android:id="@+id/activity_note_root_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/activity_note_et_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_large"
            android:hint="Title"
            android:inputType="text"
            style="@style/Text.Title"
            android:background="@android:color/transparent" />

        <EditText
            android:id="@+id/activity_note_et_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_large"
            android:hint="Note"
            android:inputType="textMultiLine"
            style="@style/Text.Body"
            android:lineSpacingMultiplier="@dimen/line_spacing_multiplier_content"
            android:background="@android:color/transparent"/>

        <TextView
            android:id="@+id/activity_note_tv_charactercount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="tv_charactercount"
            style="@style/Text.Metadata"
            android:textAlignment="viewEnd" />

        <TextView
            android:id="@+id/activity_note_tv_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="tv_date"
            style="@style/Text.Metadata"
            android:textAlignment="viewEnd" />

        <!-- View to add a margin to the bottom of the scroll area -->
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/scroll_margin" />

    </LinearLayout>
</ScrollView>